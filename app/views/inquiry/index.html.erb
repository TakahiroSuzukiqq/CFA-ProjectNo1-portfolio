<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
  <div class="page-header">
    <!-- <h1>お問い合わせ</h1> -->
    <h1>Inquiry</h1>
  </div>

  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <!-- <strong>入力内容にエラーがあります</strong> -->
      <strong>Error, please try again</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <!-- <th>名前<span class="text-danger">（必須）</span></th> -->
      <th>Name<span class="text-danger">（Required）</span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <!-- <th>メールアドレス<span class="text-danger">（必須）</span></th> -->
      <th>E-mail address<span class="text-danger">（Required）</span></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <!-- <th>お問い合わせ内容</th> -->
      <th>Contents</th>
      <td><%= f.text_area :message %></td>
    </tr>
  </table>
  <!-- <%= f.submit '確認', class: 'btn btn-primary' %> -->
  <%= f.submit 'Confirm', class: 'btn btn-primary' %>
<% end %>
